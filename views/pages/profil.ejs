<section class="profil">
  <div class="access-messages" style="display:none;">
    <div id="access-msg"></div>
  </div>
  <input type="hidden" id="api-url" value="<%= typeof API_URL !== 'undefined' ? API_URL : '' %>">
  <!-- infos personnelles -->
  <div class="profile-card info-section">
    <form action="" id="info-form">
      <div class="form-grid">
        <div class="form-group">
          <label for="username">
            username</label>
          <input type="text" id="username" name="username">
          <span class="error" data-error="username"></span>
        </div>
        <div class="form-group">
          <label for="email">
            email</label>
          <input type="text" id="email" name="email">
          <span class="error" data-error="email"></span>
        </div>
        <div class="form-actions">
          <button type="submit">Valider</button>
          <div class="message-container" style="display:none;">
            <div id="verify-msg"></div>
          </div>
        </div>
      </div>
    </form>
  </div>

  <div class="profile-card avatar-section">
    <h3>Photo de profil</h3>
    <div class="avatar-container">
      <img id="user-avatar" src="" alt="Avatar" class="avatar">
    </div>
    <form id="avatar-form">
      <div class="file-input-wrapper">
        <input type="file" name="avatar" id="avatar-input" accept="image/*">
        <button type="submit" class="btn btn-primary">Modifier l'avatar</button>
      </div>
    </form>
    <!-- Section Sécurité  -->
    <div class="profile-card security">
      <h3>Sécurité</h3>
      <div class="password-reset">
        <p>Pour des raisons de sécurité, la modification du mot de passe se fait via un lien envoyé par email.</p>
        <button id="request-reset-btn" class="btn btn-primary">Recevoir un lien de réinitialisation</button>
        <div id="reset-msg"></div>
      </div>
    </div>
  </div>
</section>