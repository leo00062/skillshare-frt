<section class="login">
  <form action="" id="login-form">
    <div class="access-messages" style="display:none;">
      <div id="access-msg"></div>
    </div>
    <input type="hidden" id="api-url" value="<%= typeof API_URL !== 'undefined' ? API_URL : '' %>">
    <div class="form-group">
      <label for="email">
        Email </label>
      <input type="text" name="email" autocomplete="current-username">
      <span class="error" data-error="email"></span>
    </div>
    <div class="form-group">
      <label for="password">
        Mot de passe </label>
      <input type="password" name="password" id="password" autocomplete="current-password">
      <span class="error" data-error="password"></span>
    </div>
    <p class="register-link">
      Pas encore de compte ? <a href="/inscription">Inscrivez-vous ici</a>
    </p>
    <div class="message-container" style="display:none;">
      <div id="verify-msg"></div>
    </div>
    <button type="submit">Se connecter</button>
    <div id="verify-msg"></div>
  </form>
</section>