<section class="reset-password">
  <h2>Réinitialisation du mot de passe</h2>

  <div class="form-container">
    <input type="hidden" id="api-url" value="<%= typeof API_URL !== 'undefined' ? API_URL : '' %>">
    <input type="hidden" id="reset-token" value="<%= typeof token !== 'undefined' ? token : '' %>">

    <form id="reset-form">
      <label>
        Nouveau mot de passe
        <input type="password" name="password" required minlength="8">
        <span class="error" data-error="password"></span>
      </label>

      <label>
        Confirmer le mot de passe
        <input type="password" name="confirmPassword" required minlength="8">
        <span class="error" data-error="confirmPassword"></span>
      </label>

      <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>
      <div id="reset-msg"></div>
    </form>
  </div>
</section>